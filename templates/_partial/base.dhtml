<html>
    <head>
        {% load static %}
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="{{ ASSETS_URL }}css/common.css" />
        <link rel="stylesheet" href="{% static "css/app.css" %}"/>
        <title>レシピ管理 - {{title}}</title>
    </head>
    <body>
        <section class="container">
            <!-- 見出し -->
            <header class="header">
                <div class="system-name">
                    <span>レシピ管理システム</span>
                </div>
                <h1 class="page-title">{{title}}</h1>
                <div class="other">
                    {% if request.session.user %}
                    <span>{{request.user}} ({{request.user.mail_address}})</span>
                    <a href="{% url 'recipe:logout' %}">ログアウト</a>
                    {% endif %}
                </div>
                <div class="other-icon"></div>
                <div class="other-icon-open">
                    <div class="other-icon-open-arrow">>></div>
                    <div class="other-icon-open-item">
                        <div class="other-icon-open-item-text">【ログインユーザ】</div>
                        <div class="other-icon-open-item-text">{{request.user}} ({{request.user.mail_address}})</div>
                    </div>
                </div>
            </header>
            <main class="content fade">
                {% block content %}{% endblock %}
            </main>
            <footer class="footer">
                <div>&copy; 2017 - レシピ管理</div>
            </footer>
        </section>
        <script>
            var icon = document.querySelector('.other-icon');
            var open = document.querySelector('.other-icon-open')
            icon.addEventListener('click', function() {
                open.classList.add('active');
            }, false);
            open.addEventListener('click', function() {
                this.classList.remove('active');
            }, false);
        </script>
    </body>
</html>
