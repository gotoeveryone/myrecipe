<html>

<head>
    {% load static %}
    <link rel="stylesheet" href="/css/common.css" />
    <link rel="stylesheet" href="{% static "css/app.css" %}"/>
    <title>レシピ管理 - {{title}}</title>
    <!--<link rel="stylesheet" href="{% static "css/bootstrap.min.css" %}"/>-->
</head>

<body>
    <section class="container">
        <!-- 見出し -->
        <header>
            <div class="system-name"></div>
            <div class="page-title">
                <h1>レシピ管理 - {{title}}</h1>
            </div>
            <div class="other">
                {% if request.session.user %}
                <span>{{request.user}}</span>
                <a href="{% url 'recipe:logout' %}">ログアウト</a>
                {% endif %}
            </div>
        </header>
        <main class="content fade">
            {% block content %}{% endblock %}
        </main>
        <footer>
            <div>&copy; 2017 - レシピ管理</div>
        </footer>
    </section>
    <div class="block-ui"></div>
    <script src="{% static "js/app.js" %}"></script>
    {% comment %}<script src="{% static "js/bootstrap.min.js" %}"></script>{% endcomment %}
    {% block script %}{% endblock %}
</body>

</html>