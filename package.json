  "scripts": {
    "django-install": "npm run django-install-prod -- django-debug-toolbar",
    "django-install-prod": "pip install django djangorestframework django-dotenv",
    "django-upgrade": "npm run django-upgrade-prod -- django-debug-toolbar",
    "django-upgrade-prod": "pip install --upgrade django djangorestframework",
    "sass": "node-sass ./resources/sass/app.scss -o ./public/css/ --output-style compressed",
    "sass-dev": "npm run sass -- -w",
    "sass-prod": "npm run sass -- -p",
    "webpack": "webpack --colors --config=./webpack.config.js",
    "webpack-dev": "npm run webpack -- -w --progress",
    "webpack-prod": "npm run webpack -- -p",
    "dev": "npm-run-all -p sass-dev webpack-dev",
    "prod": "npm-run-all -p sass-prod webpack-prod"
