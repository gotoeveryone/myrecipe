{
  "plugins": ["stylelint-scss"],
  "extends": [
    "stylelint-config-prettier",
    "stylelint-config-standard-scss"
  ],
  "customSyntax": "postcss-scss",
  "rules": {
    "scss/dollar-variable-colon-space-after": "always",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "mixin",
          "content",
          "include",
          "extend",
          "each",
          "if",
          "else",
          "for",
          "use"
        ]
      }
    ],
    "no-descending-specificity": null
  }
}
